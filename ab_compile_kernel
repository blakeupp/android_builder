clear
echo "Compiling kernel..."

cd $KERNEL_DIR

#make desirec_defconfig

cp $KITCHEN_ROOT/tools/config-$KERNEL_VER .config

export ARCH=arm
export CROSS_COMPILE=arm-eabi-
export PATH=$PATH:$KITCHEN_ROOT/source/projects/$AOSP_VERSION/prebuilt/linux-x86/toolchain/arm-eabi-4.4.0/bin
make -j(grep -c processor /proc/cpuinfo)

cp $KERNEL_DIR/arch/arm/boot/zImage $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/desirec/boot.img-kernel
#cp $KERNEL_DIR/arch/arm/boot/zImage $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/generic/boot.img-kernel

clear
echo "Building boot.img and copying to AOSP working folder"

cd $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/desirec
#cd $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/generic
mv root/ boot.img-ramdisk/

$KITCHEN_ROOT/scripts/ab_build_mkboot

$KITCHEN_ROOT/tools/mkbootfs boot.img-ramdisk | gzip > ramdisk-boot
$KITCHEN_ROOT/tools/mkbootimg --kernel boot.img-kernel --ramdisk ramdisk-boot --cmdline "no_console_suspend=1 console=null" -o boot.img --base 0x11200000

if [ ! -f boot.img ]
   then
   echo "NO boot.img!!!"
   sleep 10
fi

clear
echo "Compiling WLAN driver..."

if [ ! -d $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/desrec/system/lib/modules/ ]
#if [ ! -d $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/generic/system/lib/modules/ ]
   then
      mkdir $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/desirec/system/lib/modules/
#      mkdir $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/generic/system/lib/modules/
fi

cd $KITCHEN_ROOT/source/projects/$AOSP_VERSION/system/wlan/ti/sta_dk_4_0_4_32/

make -j4

cp wlan.ko $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/desirec/system/lib/modules/
#cp wlan.ko $KITCHEN_ROOT/source/projects/$AOSP_VERSION/out/target/product/generic/system/lib/modules/ 
