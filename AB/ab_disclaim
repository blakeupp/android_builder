if [ ! -f scripts/plugins/AB/disclaim_agree ]
   then
      touch scripts/plugins/AB/disclaim_agree
      clear
      echo "YOU MUST AGREE TO THE FOLLOWING"
      echo "YOU WILL NOT HOLD US ACCOUNTABLE FOR BRICKING YOUR DEVICE"
      echo "YOU WILL NOT HOLD US ACCOUNTABLE FOR HARMING YOUR COMPUTER"
      echo "YOU WILL NOT FLAME US FOR ANYTHING THAT THIS SOFTWARE DOES OR DOESNT DO"
# Maybe add more later 
      

   else
      exit
fi


